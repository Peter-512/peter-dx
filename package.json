{
	"name": "peter-dx",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "supabase start && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"db:migration:new": "supabase migration new",
		"db:migration:auto": "supabase db diff --use-migra -f",
		"db:types": "supabase gen types typescript --local --schema public > src/lib/types/supabase.ts",
		"db:reset": "supabase db reset",
		"db:stop": "supabase stop"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^5.4.5",
		"@sveltejs/enhanced-img": "^0.3.9",
		"@sveltejs/kit": "^2.7.2",
		"@sveltejs/vite-plugin-svelte": "4.0.0",
		"@tailwindcss/typography": "^0.5.15",
		"@typescript-eslint/eslint-plugin": "^8.10.0",
		"@typescript-eslint/parser": "^8.10.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.45.1",
		"mdsvex": "^0.12.3",
		"postcss": "^8.4.47",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.3.3",
		"prettier-plugin-organize-imports": "^4.1.0",
		"prettier-plugin-svelte": "^3.2.7",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"rehype-katex-svelte": "^1.2.0",
		"remark-math": "^3.0.1",
		"shiki": "^1.22.0",
		"svelte": "^5.0.3",
		"svelte-check": "^4.0.5",
		"svelte-headless-table": "^0.18.2",
		"svelte-radix": "^1.1.1",
		"sveltekit-view-transition": "^0.5.3",
		"tailwindcss": "^3.4.14",
		"tslib": "^2.8.0",
		"typescript": "^5.6.3",
		"vite": "^5.4.9"
	},
	"type": "module",
	"dependencies": {
		"@microflash/rehype-figure": "^2.1.1",
		"@supabase/supabase-js": "^2.45.6",
		"@vercel/analytics": "^1.3.1",
		"@vercel/speed-insights": "^1.0.12",
		"bits-ui": "^0.21.15",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"lucide-svelte": "^0.453.0",
		"radix-icons-svelte": "^1.2.1",
		"rehype-slug": "^6.0.0",
		"remark-toc": "^9.0.0",
		"remark-unwrap-images": "^4.0.0",
		"svelte-markdown": "^0.4.1",
		"svelte-vertical-timeline": "^1.0.2",
		"tailwind-merge": "^2.5.4",
		"tailwind-variants": "^0.2.1"
	}
}
