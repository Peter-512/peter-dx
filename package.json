{
	"name": "peter-dx",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "supabase start && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"db:migration:new": "supabase migration new",
		"db:migration:auto": "supabase db diff --use-migra -f",
		"db:types": "supabase gen types typescript --local --schema public > src/lib/types/supabase.ts",
		"db:reset": "supabase db reset",
		"db:stop": "supabase stop"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^5.2.0",
		"@sveltejs/enhanced-img": "^0.3.8",
		"@sveltejs/kit": "^2.6.1",
		"@sveltejs/vite-plugin-svelte": "4.0.0-next.7",
		"@tailwindcss/typography": "^0.5.12",
		"@typescript-eslint/eslint-plugin": "^7.6.0",
		"@typescript-eslint/parser": "^7.6.0",
		"autoprefixer": "^10.4.19",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.44.1",
		"mdsvex": "^0.11.0",
		"postcss": "^8.4.38",
		"postcss-load-config": "^5.0.3",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prettier-plugin-svelte": "^3.2.7",
		"prettier-plugin-tailwindcss": "^0.5.13",
		"rehype-katex-svelte": "^1.2.0",
		"remark-math": "^2.0.1",
		"shiki": "^1.3.0",
		"svelte": "5.0.0-next.260",
		"svelte-check": "^4.0.4",
		"svelte-headless-table": "^0.18.2",
		"svelte-radix": "^1.1.0",
		"sveltekit-view-transition": "^0.5.3",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.6.2",
		"vite": "^5.4.8"
	},
	"type": "module",
	"dependencies": {
		"@microflash/rehype-figure": "^2.0.0",
		"@supabase/supabase-js": "^2.42.0",
		"@vercel/analytics": "^1.2.2",
		"@vercel/speed-insights": "^1.0.10",
		"bits-ui": "^0.21.15",
		"clsx": "^2.1.0",
		"date-fns": "^3.6.0",
		"lucide-svelte": "^0.366.0",
		"radix-icons-svelte": "^1.2.1",
		"rehype-slug": "^6.0.0",
		"remark-toc": "^9.0.0",
		"remark-unwrap-images": "^4.0.0",
		"svelte-markdown": "^0.4.1",
		"svelte-vertical-timeline": "^1.0.0",
		"tailwind-merge": "^2.2.2",
		"tailwind-variants": "^0.2.1"
	}
}
