{
	"name": "peter-dx",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "supabase start && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"db:migration:new": "supabase migration new",
		"db:migration:auto": "supabase db diff --use-migra -f",
		"db:types": "supabase gen types typescript --local --schema public > src/lib/types/supabase.ts",
		"db:reset": "supabase db reset",
		"db:stop": "supabase stop"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^5.10.3",
		"@sveltejs/enhanced-img": "^0.8.3",
		"@sveltejs/kit": "^2.43.8",
		"@sveltejs/vite-plugin-svelte": "6.2.1",
		"@tailwindcss/typography": "^0.5.19",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"eslint": "^9.37.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"mdsvex": "^0.12.3",
		"postcss": "^8.5.6",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.6.2",
		"prettier-plugin-organize-imports": "^4.3.0",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"rehype-katex-svelte": "^1.2.0",
		"remark-math": "^3.0.1",
		"shiki": "^1.22.0",
		"svelte": "^5.39.8",
		"svelte-check": "^4.3.2",
		"svelte-headless-table": "^0.18.2",
		"svelte-radix": "^2.0.2",
		"sveltekit-view-transition": "^0.5.3",
		"tailwindcss": "^4.1.14",
		"tslib": "^2.8.0",
		"typescript": "^5.9.3",
		"vite": "^7.1.9"
	},
	"type": "module",
	"dependencies": {
		"@microflash/rehype-figure": "^2.1.1",
		"@supabase/supabase-js": "^2.58.0",
		"@tailwindcss/postcss": "^4.1.14",
		"@tailwindcss/vite": "^4.1.14",
		"@vercel/analytics": "^1.5.0",
		"@vercel/speed-insights": "^1.2.0",
		"bits-ui": "^2.11.4",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"lucide-svelte": "^0.544.0",
		"radix-icons-svelte": "^1.2.1",
		"rehype-slug": "^6.0.0",
		"remark-toc": "^9.0.0",
		"remark-unwrap-images": "^4.0.0",
		"svelte-markdown": "^0.4.1",
		"svelte-vertical-timeline": "^2.0.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss-animate": "^1.0.7"
	}
}
