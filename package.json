{
  "name": "peter-dx",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.18.1",
  "scripts": {
    "dev": "supabase start && vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "db:migration:new": "supabase migration new",
    "db:migration:auto": "supabase db diff --use-migra -f",
    "db:types": "supabase gen types typescript --local --schema public > src/lib/types/supabase.ts",
    "db:reset": "supabase db reset",
    "db:stop": "supabase stop"
  },
  "devDependencies": {
    "@lucide/svelte": "^0.548.0",
    "@sveltejs/adapter-vercel": "^6.0.0",
    "@sveltejs/enhanced-img": "^0.8.4",
    "@sveltejs/kit": "^2.47.3",
    "@sveltejs/vite-plugin-svelte": "6.2.1",
    "@tailwindcss/typography": "^0.5.19",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.5",
    "mdsvex": "^0.12.6",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "rehype-katex-svelte": "^1.2.0",
    "remark-math": "^3.0.1",
    "shiki": "^1.22.0",
    "svelte": "^5.42.0",
    "svelte-check": "^4.3.3",
    "svelte-headless-table": "^0.18.3",
    "svelte-radix": "^3.0.0",
    "sveltekit-view-transition": "^0.5.3",
    "tailwindcss": "^4.1.16",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "type": "module",
  "dependencies": {
    "@microflash/rehype-figure": "^2.1.4",
    "@supabase/supabase-js": "^2.76.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/vite": "^4.1.16",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "bits-ui": "^2.14.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-svelte": "^0.548.0",
    "radix-icons-svelte": "^1.2.1",
    "rehype-slug": "^6.0.0",
    "rehype-unwrap-images": "^1.0.0",
    "remark-toc": "^9.0.0",
    "svelte-markdown": "^0.4.1",
    "svelte-vertical-timeline": "^2.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss-animate": "^1.0.7"
  }
}
