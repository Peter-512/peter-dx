{
	"name": "peter-dx",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "supabase start && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"db:migration:new": "supabase migration new",
		"db:migration:auto": "supabase db diff --use-migra -f",
		"db:types": "supabase gen types typescript --local --schema public > src/lib/types/supabase.ts",
		"db:reset": "supabase db reset",
		"db:stop": "supabase stop"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^4.0.5",
		"@sveltejs/enhanced-img": "^0.1.8",
		"@sveltejs/kit": "^2.3.5",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^6.19.0",
		"@typescript-eslint/parser": "^6.19.0",
		"autoprefixer": "^10.4.17",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.33",
		"postcss-load-config": "^5.0.2",
		"prettier": "^3.2.4",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"svelte": "^4.2.9",
		"svelte-check": "^3.6.3",
		"svelte-headless-table": "^0.18.1",
		"svelte-radix": "^0.6.2",
		"sveltekit-view-transition": "^0.5.3",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.4.1",
		"typescript": "^5.3.3",
		"vite": "^5.0.11"
	},
	"type": "module",
	"dependencies": {
		"@supabase/supabase-js": "^2.39.3",
		"@vercel/analytics": "^1.1.2",
		"@vercel/speed-insights": "^1.0.5",
		"bits-ui": "^0.14.0",
		"clsx": "^2.1.0",
		"date-fns": "^3.2.0",
		"lucide": "^0.312.0",
		"radix-icons-svelte": "^1.2.1",
		"svelte-markdown": "^0.4.1",
		"svelte-vertical-timeline": "^1.0.0",
		"tailwind-merge": "^2.2.0",
		"tailwind-variants": "^0.1.20"
	}
}